# YouTube Shorts Intelligence Platform - Environment Configuration

# YouTube Data API v3
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Anthropic API (Claude)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Databricks Configuration
# Get from your Databricks workspace settings
DATABRICKS_WORKSPACE_URL=https://your-workspace.cloud.databricks.com
DATABRICKS_ACCESS_TOKEN=your_databricks_access_token_here

# Optional: Databricks Unity Catalog Settings
DATABRICKS_CATALOG=youtube_intelligence
DATABRICKS_SCHEMA_BRONZE=raw_data
DATABRICKS_SCHEMA_SILVER=processed_data
DATABRICKS_SCHEMA_GOLD=analytics

# Optional: Performance Tuning
MAX_CONCURRENT_REQUESTS=10
API_RATE_LIMIT_PER_SECOND=10
REQUEST_TIMEOUT_SECONDS=30

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Output Configuration
OUTPUT_DIRECTORY=./outputs
SAVE_RAW_DATA=true
SAVE_INTELLIGENCE_REPORTS=true
